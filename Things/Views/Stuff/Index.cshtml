<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title></title>
</head>
<body>
  @using Things.Models;

  <h1>Things to pack</h1>

  <ul>
  @if (Model.Count == 0)
  {
    <p>Add some things to your list!</p>
  }
  @if(Model.Count != 0)
  {
    @foreach (Stuff packinglists in Model)
    {
      <li><a href='/things/@packinglists.GetId()'>@packinglists.Items</a></li>
    }
  }
  </ul>

  <a href="/things/new">Add a new item.</a>

  @* <form action="/items/delete" method="post">
    <button type="submit" name="button">Clear All Items</button>
  </form> *@
</body>
</html>
